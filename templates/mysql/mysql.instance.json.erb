[
  <%- @servers.each do |server| %>
  {
    "name"    : "<%= !server['name'].nil? ? server['name'] : server['host'] %>",
    "host"    : "<%= server['host'] %>",
    "metrics" : "<%= !server['metrics'].nil? ? server['metrics'] : @metrics %>",
    "user"    : "<%= !server['user'].nil? ? server['user'] : @user %>",
    "passwd"  : "<%= !server['passwd'].nil? ? server['passwd'] : @passwd %>"
  },
  <%- end %>
]
